<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thephiloswap.thephiloswapbeta">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ApplicationClass"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MyBooksDescriptionActivity"
            android:theme="@style/AppTheme.AppDialogTheme"></activity>
        <activity android:name=".HomeActivityFrag"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".MyBooksActivity" />
        <activity android:name=".MyAccountActivity" />
        <activity
            android:name=".BookDescriptionActivity"
            android:theme="@style/AppTheme.AppDialogTheme" />
        <activity android:name=".RequestBookActivity" />
        <activity android:name=".AddBookActivity" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".NewAccountActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>